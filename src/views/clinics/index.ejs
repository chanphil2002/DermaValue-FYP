<% layout('/layout/boilerplate') %>

<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="d-flex align-items-center mb-4" style="gap: 1rem">
        <h4 class="mb-0">All Clinics</h4>
        <% if (user.role === 'ADMIN') { %>
        <a href="/clinics/new" class="btn btn-success">Add Clinic</a>
        <% } %>
      </div>
      <!-- <div class="col-sm-6">
        <ol class="breadcrumb float-sm-end">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Clinicians</li>
        </ol>
      </div> -->
    </div>
  </div>
</div>

<!--begin::App Content-->
<div class="app-content">
  <div class="container-fluid mx-1">
    <!-- Clinics List -->
    <div class="row g-4">
      <% clinics.forEach(clinic => { %>
      <div class="col-lg-3 col-md-6 col-sm-12">
        <div
          class="card h-100 border-0 shadow rounded-4 overflow-hidden mb-4 d-flex flex-column"
          style="max-width: 400px"
        >
          <!-- Image -->
          <div
            class="position-relative"
            style="height: 200px; overflow: hidden"
          >
            <img
              src="<%= clinic.profileImageUrl %>"
              class="card-img-top h-100 w-100"
              style="object-fit: cover"
              alt="Clinic Image"
            />
          </div>

          <!-- Card Body -->
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <h4 class="fw-bold mb-1"><%= clinic.name %></h4>
              <p class="text-muted mb-2">
                <i class="bi bi-geo-alt-fill me-1"></i> <%= clinic.location %>
              </p>
              <p class="card-text text-muted mb-3">
                <%= clinic.description || "No description available." %>
              </p>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-2 mt-auto">
              <% if (user.role === 'PATIENT') { %>
              <a
                href="/cases/new/<%= clinic.id %>"
                class="btn btn-primary w-100 py-2 rounded-pill"
              >
                <i class="bi bi-calendar-check me-2"></i>Book Appointment Now
              </a>
              <% } %>
              <a
                href="/clinics/<%= clinic.id %>"
                class="btn btn-outline-secondary border-secondary w-100 py-2 rounded-pill"
              >
                <i class="bi bi-info-circle me-2"></i>View Details
              </a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<!--end::App Content-->
